<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="@dimen/margins"
    android:paddingLeft="@dimen/margins"
    android:paddingRight="@dimen/margins"
    android:paddingBottom="@dimen/demo_bottom_margin"
    android:background="@color/purple"
    android:gravity="center">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/demo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/title_share"
            android:textSize="@dimen/demo_title"/>

        <TextView
            style="@style/demo_text"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/demo_text_margin"
            android:gravity="center_horizontal"
            android:text="@string/description_share"
            android:textSize="@dimen/demo_text_normal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/demo_share"/>

    </LinearLayout>
</LinearLayout>
