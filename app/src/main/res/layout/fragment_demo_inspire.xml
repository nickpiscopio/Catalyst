<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margins"
    android:background="@android:color/white"
    android:gravity="center">

    <TextView
        style="@style/text_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/title_daily_inspiration"
        android:textSize="@dimen/title"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/demo_image_margin"
        android:layout_marginBottom="@dimen/demo_image_margin"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/demo_inspiration_image"/>

    <TextView
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/description_daily_inspiration"
        android:textSize="@dimen/text_normal"/>

</LinearLayout>
