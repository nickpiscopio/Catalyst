<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margins"
    android:background="@color/light_blue"
    android:gravity="center_vertical">

    <TextView
        style="@style/demo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/app_name"
        android:textSize="@dimen/title"/>

    <TextView
        style="@style/demo_text"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/demo_text_margin"
        android:gravity="center_horizontal"
        android:text="@string/description_app"
        android:textSize="@dimen/text_normal"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/demo_image_margin"
        android:layout_marginBottom="@dimen/demo_image_margin"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/demo_about"/>

</LinearLayout>
